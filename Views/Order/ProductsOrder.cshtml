@model List<ProductSizeOrder>

@{
    ViewData["Title"] = "ProductsOrder";
    @if (@User.IsInRole("Admin"))
    {
        Layout = "_AdminLayout";
    }
    else
    {
        Layout = "_PizzaHutLayout";
    }
}
<div class="container">
@foreach (ProductSizeOrder item in Model)
{
    <div class="card mt-4" style="width:calc(95%/3);display:inline-block;margin:6px;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
            <img class="card-img-top" src="/Images/@item.ProductSize.Product.Photo" alt="Card image" style="width:100%;height:50%">
        <div class="card-body">
            <h4 class="card-title" style="text-align:center;color:#4B49AC;font-weight:bold">@item.ProductSize.Product.Name</h4>
            <h5 class="card-text">Description : @item.ProductSize.Product.Description</h5> 
            <div>
                <h5>Product Size : @item.ProductSize.size  @item.ProductSize.Price <i>EGP</i></h5>               
            </div>
            <h5 class="card-text">Quantity : @item.Quantity</h5> 
        </div>
    </div>
}
</div>