@{
    Layout = "_AdminLayout";
}

<section class="container justify-content-between">
    <div class="col-6" >
        <h2>Create New <span style="color:#4B49AC;font-weight:bold">Role</span></h2>
        <hr />
        <form method="post" asp-action="Create">
            <div>
                <input name="role" required class="form-control mt-4" placeholder="Name" value="@ViewBag.RoleName"/>
            </div>
            <div>
                <button type="submit" class="btn btn-primary mt-4" id="submit"><i class="bi bi-check"></i> Create New</button> 
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary mt-4"><i class="bi bi-x"></i> Cancel</a>
            </div>
        </form>
    </div>
</section>
<div>
    @if (ViewBag.Errors != null)
    {
        @foreach (var item in ViewBag.Error)
        {
            <div class="invalid-feedback">@item.Description</div>
        }

    }
</div>
@section Scripts{
    <!--JQuery-->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}